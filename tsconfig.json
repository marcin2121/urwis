{
  "compilerOptions": {
    "target": "ES2020", // ✅ Nowsze + perf
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // ✅ Urwis standard!
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // ✅ Supabase/Framer fix
    "forceConsistentCasingInFileNames": true, // ✅ Case-sensitive
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // ✅ + paths
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "contexts/AuthContext.OLD.tsx",
    "contexts/LoyaltyContext.OLD.tsx"
  ]
}